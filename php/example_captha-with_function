 /* ---- Your Api Set Here ----- */
  
  // reCAPTCHA supported 40+ languages listed here: https://developers.google.com/recaptcha/docs/language
  define('G_Recaptcha_Lang','Your_captcha_languange_id'); // ex: id,es,en
  
  // Register API keys at https://www.google.com/recaptcha/admin
  define('G_Recaptcha_Publickey','Your_captcha_public_keys');
  define('G_Recaptcha_Secretkey','Your_captcha_secret_keys');
 
 
 /* ---- The function example ----- */
 
 // ex Function to display the form
 
  function display_my_recaptcha(){

	 $pub = ( defined('G_Recaptcha_Publickey') ? G_Recaptcha_Publickey : 0 );
	 return $recaptchaform = '<div class="g-recaptcha" data-sitekey="'.$pub.'"></div>
	 <script type="text/javascript" src="https://www.google.com/recaptcha/api.js?hl='.( defined('G_Recaptcha_Lang') ? G_Recaptcha_Lang : 'en' ).'">
	 </script>';
  }
  
  // ex Functions to controlling the response (true/false)
 
  function recaptcha_isvalid( $response=false, $rem=false ) {
 
  require_once 'recaptchalib.php';
  
  $siteKey = ( defined('G_Recaptcha_Publickey') ? G_Recaptcha_Publickey : false );
  $secret = ( defined('G_Recaptcha_Secretkey') ? G_Recaptcha_Secretkey : false );
  $lang = ( defined('G_Recaptcha_Lang') ? G_Recaptcha_Lang : 'en' ); 
  
  $resp = null; 
  $error = null;
  
  $reCaptcha = new ReCaptcha($secret);
  
  if ( $rem && $response ) $resp = $reCaptcha->verifyResponse($rem,$response);
  
  if ($resp != null && $resp->success) return true;
  else return false; // exit;
  
 }
 
 
 /* -----  Example The Pages ------- */
 
 if( isset( $_POST['recaptcha_example'] ) ){
   
   if( recaptcha_isvalid($_POST['recaptcha_example']) ) exit('Sukses');
   else exit('captcha wrong!');
 
 }
 
 
 $myform = '<form id="myid" name="recaptcha_example" method="post">
		   '.( display_my_recaptcha() ).'
		   <input type="submit" value="send">
		   </form>';
		   
 echo $myform;
